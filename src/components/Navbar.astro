---
import Container from "@/components/Container.astro";
---

<header id="nav" class="fixed inset-0 bottom-auto z-50 p-8 transition-all">
  <Container>
    <nav class="flex items-center justify-between">
      <a id="logo" href="/" class:list={["h-20 h-28 transition-all"]}>
        <img
          src="logo.png"
          alt="ULAVET Logo"
          width="86"
          height="112"
          loading="eager"
          decoding="async"
          class="h-full w-auto object-contain"
        />
      </a>

      <ul
        class="hidden flex-col lg:mx-auto lg:flex lg:flex-row lg:items-center lg:space-x-8 xl:space-x-16"
      >
        <li
          class="mb-5 text-lg font-semibold transition hover:text-ula-green lg:mb-0"
        >
          <a href="#inici">Inici</a>
        </li>

        <li
          class="mb-5 text-lg font-semibold transition hover:text-ula-green lg:mb-0"
        >
          <a href="#serveis">Serveis</a>
        </li>

        <li
          class="mb-5 text-lg font-semibold transition hover:text-ula-green lg:mb-0"
        >
          <a href="#galeria">Galeria</a>
        </li>

        <li
          class="mb-5 text-lg font-semibold transition hover:text-ula-green lg:mb-0"
        >
          <a href="#equip">Equip</a>
        </li>

        <li
          class="mb-5 text-lg font-semibold transition hover:text-ula-green lg:mb-0"
        >
          <a href="#contacte">Contacte</a>
        </li>
      </ul>

      <a
        href="https://wa.me/34611092251/"
        rel="noreferrer"
        target="_blank"
        class="block rounded-lg border-2 border-ula-green px-5 py-3 text-lg font-semibold text-ula-green transition hover:bg-ula-green hover:text-white lg:hidden"
      >
        Demanar cita
      </a>
      <a
        href="tel:0034611092251"
        rel="noreferrer"
        class="hidden rounded-lg border-2 border-ula-blue px-5 py-3 text-lg font-semibold text-ula-blue transition hover:bg-ula-blue hover:text-white lg:block xl:block"
      >
        Demanar cita
      </a>
    </nav>
  </Container>
</header>

<script>
  const nav = document.querySelector("#nav");
  const logo = document.querySelector("#logo");

  let isScroll = false;

  window.addEventListener("scroll", () => {
    const { scrollY } = window;

    if (scrollY > 125) {
      nav?.classList.add("bg-white", "border-b", "py-4");
      logo?.classList.remove("h-28");
    } else if (scrollY < 25) {
      nav?.classList.remove("bg-white", "border-b", "py-4");
      logo?.classList.add("h-28");
    }
  });
</script>
