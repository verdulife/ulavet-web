---
import { Image } from "astro:assets";
import Container from "@/components/Container.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import docCat from "@/assets/dog-cat.jpg";
import Stethoscope from "@/assets/Stethoscope.astro";
import Vaccine from "@/assets/Vaccine.astro";
import Bag from "@/assets/Bag.astro";
---

<section id="serveis" class="bg-white px-4 pt-32">
  <Container>
    <div class="flex flex-col items-center text-center gap-20">
      <header class="max-w-xl">
        <h2 class="font-semibold text-gray-900 text-4xl leading-normal">
          Serveis <span class="font-bold text-ula-green">ULAVET</span>
        </h2>
      </header>

      <ul class="flex flex-wrap gap-y-8 justify-center">
        <ServiceCard>
          <Fragment slot="icon">
            <Stethoscope />
          </Fragment>
          <Fragment slot="title">Consulta Veterinària</Fragment>
          <Fragment slot="desc">
            El teu punt de partida per al benestar de la teva mascota. Els
            nostres experts veterinaris ofereixen avaluacions integrals i
            consells personalitzats.
          </Fragment>
        </ServiceCard>

        <ServiceCard>
          <Fragment slot="icon">
            <Vaccine />
          </Fragment>
          <Fragment slot="title">Vacunació i Prevenció</Fragment>
          <Fragment slot="desc">
            Mantingues els teus companys peluts protegits contra malalties.
            Oferim programes de vacunació i estratègies de prevenció per a una
            vida saludable.
          </Fragment>
        </ServiceCard>

        <ServiceCard>
          <Fragment slot="icon">
            <Bag />
          </Fragment>
          <Fragment slot="title">Botiga Veterinària</Fragment>
          <Fragment slot="desc">
            Troba productes de qualitat a la nostra botiga veterinària, des
            d'aliments premium fins a joguines i accessoris, tot seleccionat per
            al benestar de les teves mascotes.
          </Fragment>
        </ServiceCard>
      </ul>

      <picture class="flex justify-center w-full">
        <Image
          src={docCat}
          alt="ULAVET Gos i gat"
          class="w-full md:w-2/3 aspect-video object-cover"
        />
      </picture>
    </div>
  </Container>
</section>
