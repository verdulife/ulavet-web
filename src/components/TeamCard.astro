---
interface Props {
  image: string;
  name: string;
}

const { image, name } = Astro.props as Props;
---

<li
  class="grid w-full grid-cols-1 gap-8 rounded-xl bg-gray-50 p-8 md:grid-cols-2"
>
  <img
    width="460"
    height="460"
    src={image}
    alt={name}
    decoding="async"
    loading="lazy"
    class="aspect-square w-full rounded-lg border-4 border-white object-cover object-top shadow-lg shadow-ula-blue/40"
  />

  <div class="flex flex-col items-start justify-center gap-4 text-left">
    <h3 class="text-2xl font-semibold text-gray-950">
      {name}
    </h3>

    <p class="text-md leading-relaxed text-ula-blue">
      <slot />
    </p>
  </div>
</li>
