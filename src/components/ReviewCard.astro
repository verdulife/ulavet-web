---
import Star from "@/assets/Star.astro";

interface Props {
  avatar: string;
  name: string;
  review: string;
}

const { avatar, name, review } = Astro.props;
---

<li
  class="relative mb-10 flex aspect-square w-64 flex-col gap-2 overflow-hidden rounded-lg bg-gray-100 p-6 md:mb-0 lg:w-80 lg:p-8 shadow-lg shadow-ula-blue/30"
>
  <picture>
    <img
      src={avatar}
      alt={name}
      width="48"
      height="48"
      loading="lazy"
      decoding="async"
      class="w-12"
    />
  </picture>

  <header class="flex flex-col">
    <h3 class="text-xl font-semibold text-gray-900">
      {name}
    </h3>

    <div class="flex items-center gap-1 text-yellow-500">
      <Star />
      <Star />
      <Star />
      <Star />
      <Star />
    </div>
  </header>

  <p class="line-clamp-4 font-normal text-gray-400 lg:line-clamp-6">
    {review}
  </p>
</li>
