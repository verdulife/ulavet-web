---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ca" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Cuidado completo para gatos y perros con atención local y venta de productos veterinarios en Sant Pere de Ribes, Barcelona. ¡Confía en nosotros para el bienestar de tus mascotas!description"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="text-pretty text-ula-blue">
    <div class="w-full overflow-x-hidden scroll-smooth">
      <slot />
    </div>
  </body>
</html>
